.PHONY: clean test coverage build install lint

# ============================================================================ #
# CLEAN COMMANDS
# ============================================================================ #

clean:
	rm -fr dist/
	rm -fr target/

# ============================================================================ #
# TEST COMMANDS
# ============================================================================ #

test:
	cargo test -p speleodb-compass-sidecar --lib

# ============================================================================ #
# BUILD COMMANDS
# ============================================================================ #

build: clean
	flit build --format wheel

# ============================================================================ #
# DEV COMMANDS
# ============================================================================ #

dev:
	cargo tauri dev