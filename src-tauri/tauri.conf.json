{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "speleodb-compass-sidecar",
  "version": "0.0.3",
  "identifier": "com.speleodb-compass-sidecar",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SpeleoDB Compass Sidecar",
        "fullscreen": false,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "width": 1000,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
